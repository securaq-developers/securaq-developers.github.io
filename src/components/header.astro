---
import { Shield } from "@lucide/astro";
import { Button } from "@/components/ui/button";
import "@/styles/global.css";
---

<header
    class="sticky top-0 z-10 border-b bg-background/90 backdrop-blur supports-[backdrop-filter]:bg-background/60"
>
    <div class="container mx-auto flex h-16 items-center justify-between px-4">
        <div class="flex items-center space-x-4">
            <div class="relative">
                <img
                    src="/cat.jpeg"
                    alt="SECURAQ Logo"
                    class="h-12 w-12 rounded-full object-cover ring-2 ring-primary/20"
                />
            </div>
            <div>
                <h1 class="text-2xl font-bold text-primary">SECURAQ</h1>
                <p class="text-sm text-muted-foreground">
                    Desarrollo de software
                </p>
            </div>
        </div>
        <nav class="hidden items-center gap-6 text-sm md:flex">
            <a href="#servicios" class="hover:underline underline-offset-4">
                Servicios
            </a>
            <a href="#beneficios" class="hover:underline underline-offset-4">
                Beneficios
            </a>
            <a href="#contacto" class="hover:underline underline-offset-4">
                Contacto
            </a>
        </nav>
        <div class="ml-auto md:ml-0">
            <a href="#contacto">
                <Button size="sm" className="whitespace-nowrap">
                    Solicitar evaluaci√≥n
                </Button>
            </a>
        </div>
    </div>
</header>
